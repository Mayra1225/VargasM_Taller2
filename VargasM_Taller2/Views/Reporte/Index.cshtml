@model VargasM_Taller2.Models.Reporte

@{
    ViewData["Title"] = "Reporte del Torneo";
}

<style>
    body {
        background-color: #2c3e50; /* Azul Bootstrap */
        color: white; /* Para que el texto sea legible */
    }

    .table, .table th, .table td {
        color: white;
        background-color: transparent;
    }

    .thead-dark th {
        background-color: #2c3e50;
    }
</style>

<h2>🏆 Reporte del Torneo</h2>

<h4>🥇 Top 5 Goleadores</h4>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Jugador</th>
            <th>Equipo</th>
            <th>Goles</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var j in Model.TopGoleadores)
        {
            <tr>
                <td>@j.Nombre</td>
                <td>@j.Equipo.Nombre</td>
                <td>@j.Goles</td>
            </tr>
        }
    </tbody>
</table>

<h4>🎯 Top 5 Asistentes</h4>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Jugador</th>
            <th>Equipo</th>
            <th>Asistencias</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var j in Model.TopAsistentes)
        {
            <tr>
                <td>@j.Nombre</td>
                <td>@j.Equipo.Nombre</td>
                <td>@j.Asistencias</td>
            </tr>
        }
    </tbody>
</table>

<h4>💰 Equipos con más presupuesto</h4>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Equipo</th>
            <th>Presupuesto (USD)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model.TopEquiposPresupuesto)
        {
            <tr>
                <td>@e.Nombre</td>
                <td>@String.Format("{0:N2}", e.Presupuesto)</td>
            </tr>
        }
    </tbody>
</table>
