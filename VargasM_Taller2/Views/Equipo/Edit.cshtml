@model VargasM_Taller2.Models.Equipo

@{
    ViewData["Title"] = "Edit";
}

<style>
    body {
        background-color: #2c3e50; /* Azul Bootstrap */
        color: white; /* Para que el texto sea legible */
    }

    .table, .table th, .table td {
        color: white;
        background-color: transparent;
    }

    .thead-dark th {
        background-color: #2c3e50;
    }
</style>

<h1>Información</h1>

<h4>@Model.Nombre</h4>
<img src="@Model.LogoUrl" width="150" />
<h6>Ciudad: @Model.Ciudad</h6>
<h6>Estadio: @Model.Estadio</h6>
<h6>Director Técnico: @Model.DT</h6>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LogoUrl" class="control-label"></label>
                <input asp-for="LogoUrl" class="form-control" />
                <span asp-validation-for="LogoUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PartidosJugados" class="control-label"></label>
                <input asp-for="PartidosJugados" class="form-control" />
                <span asp-validation-for="PartidosJugados" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PartidosGanados" class="control-label"></label>
                <input asp-for="PartidosGanados" class="form-control" />
                <span asp-validation-for="PartidosGanados" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PartidosEmpatados" class="control-label"></label>
                <input asp-for="PartidosEmpatados" class="form-control" />
                <span asp-validation-for="PartidosEmpatados" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PartidosPerdidos" class="control-label"></label>
                <input asp-for="PartidosPerdidos" class="form-control" />
                <span asp-validation-for="PartidosPerdidos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ciudad" class="control-label"></label>
                <input asp-for="Ciudad" class="form-control" />
                <span asp-validation-for="Ciudad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DT" class="control-label"></label>
                <input asp-for="DT" class="form-control" />
                <span asp-validation-for="DT" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estadio" class="control-label"></label>
                <input asp-for="Estadio" class="form-control" />
                <span asp-validation-for="Estadio" class="text-danger"></span>
            </div>
            <button type="button" class="btn btn-warning text-white" onclick="calcularPuntos()">Calcular Puntos</button>
            <p id="puntosTotal" class="mt-2"></p>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <script>
            function calcularPuntos() {
                let g = parseInt(document.getElementById("ganados").value) || 0;
                let e = parseInt(document.getElementById("empatados").value) || 0;
                let puntos = (g * 3) + e;
                document.getElementById("puntosTotal").innerText = "Total de puntos: " + puntos;
            }
        </script>
    </div>
</div>

<div>
    <a class="btn btn-info text-white" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}