@model IEnumerable<VargasM_Taller2.Models.Equipo>

@{
	ViewData["Title"] = "List";
	int pos = 1;
}

<style>
	body {
		background-color: #2c3e50; /* Azul Bootstrap */
		color: white; /* Para que el texto sea legible */
	}

	.table, .table th, .table td {
		color: white;
		background-color: transparent;
	}

	.thead-dark th {
		background-color: #2c3e50;
	}
</style>

<h1>Tabla de Posiciones</h1>

<p>
	<a asp-action="Create" class="btn btn-success">Ingresar Nuevo Equipo</a>
</p>

<table class="table table-hover">
	<thead>
		<tr>
			<th class="text-center">
				#
			</th>
			<th>
				Club
			</th>
			<th class="text-center">
				PJ
			</th>
			<th class="text-center">
				G
			</th>
			<th class="text-center">
				E
			</th>
			<th class="text-center">
				P
			</th>
			<th class="text-center">
				Puntos
			</th>
			<th class="text-center"></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			string claseColor = pos <= 6 ? "top6" :
			(pos <= 12 ? "mitad" : "descenso");
			<tr>
				<td class="text-center">
					@pos
				</td>
				<td>
					<img src="@item.LogoUrl" width="25" />
					@Html.DisplayFor(modelItem => item.Nombre)
				</td>
				<td class="text-center">
					@Html.DisplayFor(modelItem => item.PartidosJugados)
				</td>
				<td class="text-center">
					@Html.DisplayFor(modelItem => item.PartidosGanados)
				</td>
				<td class="text-center">
					@Html.DisplayFor(modelItem => item.PartidosEmpatados)
				</td>
				<td class="text-center">
					@Html.DisplayFor(modelItem => item.PartidosPerdidos)
				</td>
				<td class="text-center">
					@Html.DisplayFor(modelItem => item.Puntos)
				</td>
				<td class="text-center">
					<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Ver Información</a>
					<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
				</td>
			</tr>
			pos++;
		}
	</tbody>
</table>
