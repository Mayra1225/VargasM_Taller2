@model VargasM_Taller2.Models.Equipo

@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        background-color: #2c3e50; /* Azul Bootstrap */
        color: white; /* Para que el texto sea legible */
    }

    .table, .table th, .table td {
        color: white;
        background-color: transparent;
    }

    .thead-dark th {
        background-color: #2c3e50;
    }
</style>

<h1>Eliminar</h1>

<h3>¿Está Seguro de que quiere eliminar este equipo?</h3>
<h4 style="text-align: center;">@Model.Nombre</h4>
<img src="@Model.LogoUrl" width="150" style="display: block; margin: 0 auto;" />
<h6 style="text-align: center;">Ciudad: @Model.Ciudad</h6>
<h6 style="text-align: center;">Estadio: @Model.Estadio</h6>
<h6 style="text-align: center;">Director Técnico: @Model.DT</h6>
<h6 style="text-align: center;">Presupuest: @Model.Presupuesto</h6>
<h6 style="text-align: center;">Partidos Jugados: @Model.PartidosJugados</h6>
<h6 style="text-align: center;">Partidos Ganados: @Model.PartidosGanados</h6>
<h6 style="text-align: center;">Partidos Empatados: @Model.PartidosEmpatados</h6>
<h6 style="text-align: center;">Partidos Perdidos: @Model.PartidosPerdidos</h6>
<div style="text-align: center;">
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a class="btn btn-outline-info" asp-action="Index">Back to List</a> |
        <input type="submit" value="Delete" class="btn btn-outline-danger" />
    </form>
</div>
