@model IEnumerable<VargasM_Taller2.Models.Jugador>

@{
    ViewData["Title"] = "Index";
}

<style>
    body {
    background-color: #2c3e50; /* Azul Bootstrap */
    color: white; /* Para que el texto sea legible */
    }

    .table, .table th, .table td {
    color: white;
    background-color: transparent;
    }

    .thead-dark th {
    background-color: #2c3e50;
    }
</style>

<h1>Lista de Jugadores</h1>

<form method="get">
    <label for="equipoId">Filtrar por equipo:</label>
    @Html.DropDownList("equipoId", (SelectList)ViewBag.Equipos, "Todos", new { @class = "form-control", onchange = "this.form.submit();" })
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroCamiseta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Goles)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Asistencias)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sueldo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equipo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroCamiseta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Goles)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Asistencias)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sueldo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Equipo.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
